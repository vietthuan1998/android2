<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:weightSum="10"
    android:layout_height="wrap_content" android:padding="5dp">
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/item_cart_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:layout_width="0dp"
        android:weightSum="3"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:id="@+id/item_cart_tenlap"
            android:textSize="20sp"
            android:text="đasada"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/item_cart_gia"
            android:textSize="20sp"
            android:textColor="#FF0000"
            android:text="đasada"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_gravity="center"
                android:focusable="false"
                android:text="-"
                android:id="@+id/item_cart_minus"
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLines="1"
                android:maxLength="2"
                android:inputType="number"
                android:text="1"
                android:id="@+id/item_cart_sl"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_gravity="center"
                android:focusable="false"
                android:text="+"
                android:id="@+id/item_cart_plus"
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>